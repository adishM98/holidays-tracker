# Production Environment Configuration for Leave Management System

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=3000
API_PREFIX=api

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=leave_management

# =============================================================================
# JWT AUTHENTICATION
# IMPORTANT: Change these secrets in production!
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# EMAIL CONFIGURATION
# Update with your SMTP provider settings
# =============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-specific-password
MAIL_FROM=noreply@yourcompany.com

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_FILE_SIZE=5242880
UPLOAD_DEST=./uploads

# =============================================================================
# RATE LIMITING
# =============================================================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# =============================================================================
# FRONTEND URL (for CORS)
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production

# =============================================================================
# COMPANY SETTINGS
# =============================================================================
COMPANY_NAME=ToolJet
COMPANY_EMAIL=hr@yourcompany.com
COMPANY_ADDRESS=Your Company Address